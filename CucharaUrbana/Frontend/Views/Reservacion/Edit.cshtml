@model Frontend.Models.ReservacionViewModel

@{
    ViewData["Title"] = "Create";
}
<!-- book section -->
<section class="book_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Editando Reserva:
            </h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form_container">
                    <form asp-action="Create">
                        @Html.HiddenFor(Model => Model.ReservacionId)
                        <div>
                            <label asp-for="FechaReservacion" class="control-label"> Fecha y hora de reservación</label>
                            <input asp-for="FechaReservacion" class="form-control" />
                            <span asp-validation-for="FechaReservacion" class="text-danger"></span>
                        </div>
                        <div>
                            <label asp-for="MesaReservacion" class="control-label"> Número de Mesa</label>
                            <input asp-for="MesaReservacion" class="form-control" />
                            <span asp-validation-for="MesaReservacion" class="text-danger"></span>
                        </div>
                        <div>
                            <label asp-for="DetalleReservacion" class="control-label"></label>
                            <input asp-for="DetalleReservacion" class="form-control" />
                            <span asp-validation-for="DetalleReservacion" class="text-danger"></span>
                        </div>
                        <div class="btn_box">
                            <button type="submit" value="Create">
                                Reservar
                            </button>
                            <button asp-area="" asp-controller="Reservacion" asp-action="Index">
                                Ver Reservas
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="map_container ">
                    <div id="googleMap"></div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end book section -->