@model Frontend.Models.ProductoViewModel

@{
    ViewData["Title"] = "Detalles";
}


<section class="book_section layout_padding">

    <div class="container">
        <h1>Detalles</h1>
        <div class="row">
            <div class="col-md-6">
                <div class="form_container">
                    <div>
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ProductoId)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ProductoId)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Nombre)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Nombre)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Descripcion)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Descripcion)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.CategoriaId)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.CategoriaId)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Precio)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Precio)
                            </dd>
                        </dl>
                        <div>
                            @Html.ActionLink("Edit", "Edit", new { id = Model.ProductoId }) |
